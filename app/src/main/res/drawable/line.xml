<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape >
        <solid android:color="#ff8200" />
    </shape>
</item>

<item>
    <rotate android:fromDegrees="70"
        android:pivotX="30%"
        android:pivotY="70%">
        <shape
            android:shape="rectangle" >
            <solid android:color="#4D4855" />
        </shape>
    </rotate>
</item>

    <item android:top="500dp">
            <shape
                android:shape="rectangle" >
                <solid android:color="#4D4855" />
            </shape>
    </item>

</layer-list>